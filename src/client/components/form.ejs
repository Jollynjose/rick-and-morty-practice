        <input class="input" type="password" id="password" name="password" placeholder="password">
        <button class="btn" type="submit">
            <%= buttonText %>
        </button>
        <a class="btn sign" href="<%= redirect.link %>">
            <%= redirect.text %>
        </a>
    </form>
</div>